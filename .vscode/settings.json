{
  "editor.tabSize": 2,

  "files.trimFinalNewlines": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "dist/**": true,
    "node_modules/**": true,
    "npm-debug.log": true
  },

  "prettier.endOfLine": "crlf",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 80,
  "prettier.quoteProps": "consistent",
  "prettier.proseWrap": "always"
}
